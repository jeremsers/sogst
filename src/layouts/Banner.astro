---
import {Picture} from  "astro:assets";
import banner from '../assets/images/banner.jpg';

---

<section class="banner">
  <div class="container">
    <Picture
      src={banner}
      alt="banner"
      height="1080"
      width={banner.width}
      class="banner-img"
      format="avif"
      densities={[0.5,1.5, 2]}
      loading={'lazy'}
      decoding={'async'}
      quality={80}
    />
    <div class="title-container">
      <p class="subtitle">Situation d'urgence ?</p>
      <h1 class="title">
        Un plombier de notre Ã©quipe sur place dans moins de 2h
      </h1>
    </div>
  </div>
</section>

<style lang="scss">
  .banner {
    position: relative;
    height: calc(100vh - 80px);
    min-height: 400px;
    overflow: hidden;

    @media (max-width: 768px) {
      height: 60vh;
      min-height: 300px;
    }
  }

  .container {
    height: 100%;
    position: relative;
  }

  .banner-img {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.7);
    transform: scale(1.1);
   
  }

  .title-container {
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    color: var(--text-light);
    
    &::before {
      content: '';
      position: absolute;
      background: linear-gradient(90deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.3) 100%);
    }

    @media (max-width: 768px) {
      padding: var(--spacing-md) var(--spacing-sm);
      text-align: center;
    }
  }

  .title {
    font-size: clamp(1.8rem, 5vw, 3.5rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: var(--spacing-md);
    max-width: min(800px, 90%);
    position: relative;
    animation: slideUp 1s ease-out;

    @media (max-width: 768px) {
      margin: 0 auto;
    }
  }

  .subtitle {
    font-size: clamp(1.2rem, 3vw, 2rem);
    color: var(--primary-color);
    font-weight: 600;
    margin-bottom: var(--spacing-sm);
    position: relative;
    animation: slideUp 1s ease-out 0.2s backwards;
  }

  @keyframes zoomOut {
    from { transform: scale(0.9); }
    to { transform: scale(1); }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

---
import Layout from "../layouts/baselayout/Layout.astro";

import Header from "../components/Header.astro";
import Banner from "../layouts/Banner.astro";
import About from "../layouts/About.astro";
import InterventionType from "../layouts/InterventionType.astro";
import Tarif from "../layouts/Tarif.astro";
import Avis from "../layouts/Avis.astro";
import Cta from "../layouts/Cta.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Welcome to Astro.">
	<main>
		<Header />
		<Banner />
		<About />
		<InterventionType />
		<Tarif />
		<Avis />
		<Cta />
		<Footer />
	</main>
</Layout>

<style>
	/* Reset CSS de base */
	:root {
		--max-width: 1440px;
		--primary-color: #2563eb;
		--text-color: #1f2937;
		--background-color: #ffffff;
	}

	html {
		scroll-behavior: smooth;
		font-size: 16px;
	}

	body {
		width: 100%;
		margin: 0;
		padding: 0;
		font-family:
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			sans-serif;
		color: var(--text-color);
		background-color: var(--background-color);
		line-height: 1.5;
	}

	main {
		width: 100%;
		max-width: var(--max-width);
		margin: 0 auto;
		overflow-x: hidden;
	}

	/* Typographie */
	h1 {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 700;
		line-height: 1.2;
		text-align: center;
		margin-bottom: 1.5rem;
		color: var(--text-color);
	}

	/* Media Queries */
	@media (max-width: 768px) {
		html {
			font-size: 14px;
		}

		main {
			padding: 0 1rem;
		}
	}

	/* Animations douces */
	@media (prefers-reduced-motion: no-preference) {
		html {
			scroll-behavior: smooth;
		}

		a,
		button {
			transition: all 0.3s ease;
		}
	}
</style>

---
import Picture from "astro/components/Picture.astro";

interface Props {
	title: string;
	body: string;
	img: ImageMetadata;
    priceMin: number;
    priceMax: number;
}

const { img, title, body, priceMax, priceMin } = Astro.props;
---

<div class="tarif-card">
  <Picture src={img} alt={title} format="avif" class="tarif-img" decoding='async' loading='lazy' />
  <div class="text-container">
    <span class="price">
      {priceMin}€ . {priceMax}€
    </span>
    <h3>{title}</h3>
    <p>{body}</p>
  </div>
</div>


<style>
    .tarif-card{
        display: flex;
        position: relative;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        width: 90%;
       padding: 20px;
        background-color: #ffffff;
        border-radius: 10px;
        color:black;
    }
    .price{
      display: inline-block;
       background-color: #992a2a;
       border-radius: 10px;
       padding: 5px 40px;
       font-size: 18px;
       color: white;
       width: 100px;
       transform: translateY(-15px);
       
    }
    .tarif-img{
        width: 100%;
        height: 50%;
        border-radius: 10px;
        object-fit: cover;
    }
    .text-container{
      
      font-size: 18px;
    }
</style>